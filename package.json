{
  "name": "abase-v2",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "storybook"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "storybook": "pnpm --filter storybook dev",
    "setup": "pnpm install && pnpm run setup:env && pnpm run setup:db",
    "setup:env": "cp .env.example .env.local",
    "setup:db": "docker-compose up -d postgres redis",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "check:no-sqlite": "! grep -r 'sqlite' --include='*.py' --include='*.ts' --include='*.tsx' .",
    "check:no-webpack": "! grep -r 'webpack' --include='*.json' --include='*.js' --include='*.ts' ."
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "eslint": "^9.18.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-icons": "^1.3.2",
    "framer-motion": "^11.0.0",
    "react-hook-form": "^7.65.0",
    "zod": "^4.1.12"
  }
}
